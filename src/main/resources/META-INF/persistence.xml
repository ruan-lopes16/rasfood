<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <persistence-unit name="rasfood" transaction-type="RESOURCE_LOCAL"> <!-- config de banco de dados-->
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver" /> <!-- qual banco de dados iremos usar -->
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:rasfood" /> <!-- qual url do banco -> neste caso, url em memoria -->
            <property name="javax.persistence.jdbc.user" value="rasmoo" /> <!-- usuario -->
            <property name="javax.persistence.jdbc.password" value="" /> <!-- senha -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/> <!-- dialeto -> serve para identificar as queries de cada tipo de banco, neste caso h2 -->
            <property name="hibernate.show_sql" value="true"/> <!-- visualização de logs -> queries que estão sendo criadas pelo JPA -->
            <property name="hibernate.hbm2ddl.auto" value="update"/> <!-- persistencia de dados de forma automatica e consultar dados -->
        </properties>
    </persistence-unit>
</persistence>